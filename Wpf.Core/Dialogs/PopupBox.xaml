<Popup
    x:Class="Wpf.Core.Dialogs.PopupBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf.Core.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Border
        x:Name="Border"
        Width="400"
        Height="100"
        MinHeight="35"
        Margin="10"
        Background="#5485FF"
        CornerRadius="3">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="10"
                Opacity="0.8"
                ShadowDepth="0"
                Color="#999" />
        </Border.Effect>

        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16"
            Foreground="White"
            Text="{Binding Path=Message, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:PopupBox}, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="WrapWithOverflow" />
    </Border>

</Popup>
